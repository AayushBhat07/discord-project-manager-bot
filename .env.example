# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
REPORT_CHANNEL_ID=your_channel_id_here
ADMIN_USER_IDS=your_discord_user_id

# Web App API
WEBAPP_API_URL=https://benevolent-kookabura-514.convex.site

# Report Scheduling
REPORT_HOURS=8,20
TIMEZONE=Asia/Kolkata

# ======= CODE REVIEW FEATURE CONFIGURATION =======
# ðŸŽ‰ MUCH SIMPLER - No webhooks or ngrok needed!

# DM Recipient Mode
# Options: "specific" (always send to one person), "author" (send to PR author), "owner" (send to repo owner)
REVIEW_RECIPIENT_MODE=specific

# If REVIEW_RECIPIENT_MODE=specific, set this to your Discord user ID
SPECIFIC_DISCORD_USER_ID=690415992362500106

# Fallback channel if DM fails (Discord channel ID)
FALLBACK_CHANNEL_ID=1304433064099385414

# Ollama AI Configuration (local AI on your laptop)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_CODE_MODEL=qwen2.5-coder:14b

# Conversational AI (Chat in DMs)
ENABLE_CONVERSATIONAL_AI=true
CONVERSATION_HISTORY_PATH=data/conversation_history.json
MAX_CONVERSATION_HISTORY=10

# GitHub Configuration (SIMPLE VERSION!)
GITHUB_TOKEN=ghp_your_github_token_here

# Repositories to watch for PRs (comma-separated)
# Format: owner/repo,owner/repo2
GITHUB_REPOS_TO_WATCH=AayushBhat07/discord-project-manager-bot,AayushBhat07/another-repo

# How often to check for new PRs (in seconds, default: 300 = 5 minutes)
CODE_REVIEW_CHECK_INTERVAL=300

# User Mapping File (GitHub username -> Discord ID)
USER_MAPPING_FILE=user_mappings.json
